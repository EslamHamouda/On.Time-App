<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnTime" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowActivityTransitions">true</item>

        <item name="android:windowEnterTransition">@transition/tran_animation</item>

        <item name="android:windowExitTransition">@transition/tran_animation</item>


    </style>


        <style name="NewNote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
            <item name="android:statusBarColor" >#7E64FF</item>
            <item name="windowActionBar">false</item>
            <item name="windowNoTitle">true</item>
        </style>

    <style name="Theme.OnTime.NoActionBar">
        <item name="android:statusBarColor" >#3A3372</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="CalendarTheme" parent="Theme.AppCompat.Light.Dialog" >
        <item name="colorAccent">#7E64FF</item>
        <item name="android:textColorPrimary">@color/white</item>

    </style>

    <style name="CalendarThemeWeekDay" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/white</item>

    </style>

<style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
    <item name="actionMenuTextColor">@color/black</item>
    <item name="android:textColorSecondary">@color/white</item>

</style>

    <style name="ToolbarNewNote" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:paddingRight">25dp</item>
    </style>

    <style name="ToolbarStyleNote" parent="ThemeOverlay.AppCompat.Light">
      <item name="marginHorizontal">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="Search" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:radius">55dp</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/alert_style</item>
        <item name="dialogCornerRadius">20dp</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="custompopup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorAccent">#CCC2FE</item>
    </style>


</resources>