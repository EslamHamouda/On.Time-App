<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnTime" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowActivityTransitions">true</item>

        <item name="android:windowEnterTransition">@transition/tran_animation</item>

        <item name="android:windowExitTransition">@transition/tran_animation</item>

    </style>

    <style name="Theme.OnTime.NoActionBar">
        <item name="android:statusBarColor" >#3A3372</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="CalendarTheme" parent="Theme.AppCompat.DayNight.Dialog" >
        <item name="colorAccent">#7E64FF</item>
        <item name="android:textColorPrimary">@color/white</item>

    </style>

    <style name="CalendarThemeWeekDay" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:textColor">@color/white</item>

    </style>




</resources>